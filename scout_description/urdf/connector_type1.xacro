<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="connector_type1">
    <xacro:macro name="connector_type1" params="connector_prefix parent_link xyz rpy">
        <!-- 로봇의 조인트와 링크 -->
        <joint name="${connector_prefix}_connector1_joint" type="revolute">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent_link}"/>
            <child link="${connector_prefix}_connector1_link"/>
            <limit effort="10000.0" velocity="1.0" lower="-0.5" upper="0.5"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="${connector_prefix}_connector1_link">
            <visual>
                <origin xyz="-0.17 -0.23 0.15" rpy="0 0 0"/>
                <geometry>
                    <mesh scale="0.0007 0.0007 0.0007" filename="package://scout_description/meshes/v1_251_connector.stl"/>
                </geometry>
            </visual>
        </link>
        <!--이거 추가하니까 이상해짐-->
        <transmission name="${connector_prefix}_transmission">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${connector_prefix}_connector1_joint">
                <hardwareInterface>EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="${connector_prefix}_actuator">
                <hardwareInterface>EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
        <!--이거 추가하니까 이상해짐-->
    </xacro:macro>
</robot>
